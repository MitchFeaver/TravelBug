<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.photo.PhotoFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/photoImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/listviewimage"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/photoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/photoImage"
        android:layout_alignStart="@+id/photoImage"
        android:layout_alignEnd="@+id/photoImage"
        android:padding="8dp"
        android:textAlignment="center"
        android:textSize="18dp" />

</LinearLayout>